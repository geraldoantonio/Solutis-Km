
<% if notice %>
  <%= javascript_tag "toastr['success']('#{notice}')" %>
<% end  %>

<% if alert %>
  <%= javascript_tag "toastr['error']('#{alert}')" %>
<% end  %>

<%= javascript_tag '
  toastr.options = {
          "closeButton": false,
          "debug": false,
          "newestOnTop": false,
          "progressBar": false,
          "positionClass": "toast-top-right",
          "preventDuplicates": false,
          "onclick": null,
          "showDuration": "300",
          "hideDuration": "1000",
          "timeOut": "5000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }
'%>

