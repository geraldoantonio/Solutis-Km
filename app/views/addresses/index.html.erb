<h1><i class="fas fa-map-marker-alt"></i> <%= Address.model_name.human count: 2 %></h1>

<%= link_to new_address_path do %>
      <span class="pull-left"><i class="far fa-lg  fa-plus-square"></i> <%= t('buttons.new') << ' ' << Address.model_name.human
 %> </span>
<% end %>
      
<table class="table table-striped table-sm table-responsive ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= Address.human_attribute_name("description") %> </th>
      <th scope="col"><%= Address.human_attribute_name("city") %> </th>
      <th scope="col"><%= Address.human_attribute_name("uf") %> </th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td  scope="row"><%= address.id %></td>
        <td><%= address.description %></td>
        <td><%= address.city %></td>
        <td><%= address.uf %></td>
        
       <td> 
         <%= link_to address do %>
              <span class="pull-left"><i class="fas fa-lg fa-info" title="<%= t('buttons.show')%>"></i> </span>
        <% end %>
        </td>
        
       <td> 
         <%= link_to edit_address_path(address) do %>
              <span class="pull-left"><i class="far fa-lg  fa-edit" title="<%= t('buttons.edit')%>"></i> </span>
        <% end %>
        </td>
        
       <td> 
         <%= link_to address, method: :delete, data: { confirm: 'VocÃª tem certeza?' } do %>
              <span class="pull-left"><i class="far fa-lg  fa-trash-alt" title="<%= t('buttons.delete')%>"></i> </span>
        <% end %>
        </td>
          
      </tr>
    <% end %>
  </tbody>
</table>


<%= paginate @addresses %>
<br>
    


