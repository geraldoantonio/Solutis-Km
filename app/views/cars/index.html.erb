<h1><i class="fas   fa-car"></i> <%= Car.model_name.human count: 2 %></h1>

<%= link_to new_car_path do %>
      <span class="pull-left"><i class="far fa-lg  fa-plus-square"></i> <%= t('buttons.new') << ' ' << Car.model_name.human
 %> </span>
<% end %>

<table class="table table-striped table-sm table-responsive ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= Car.human_attribute_name("plate")%></th>
      <th scope="col"><%= Car.human_attribute_name("mark")%></th>
      <th scope="col"><%= Car.human_attribute_name("modelType")%></th>
      <th scope="col"><%= Car.human_attribute_name("functionary_id")%></th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td scope="row"><%= car.id %> </td>
        <td><%= car.plate %></td>
        <td><%= car.mark %></td>
        <td><%= car.modelType %></td>
        <td><%= car.functionary.name %></td>
        
       <td> 
         <%= link_to car do %>
              <span class="pull-left"><i class="fas fa-lg  fa-info" title="<%= t('buttons.show')%>"></i> </span>
        <% end %>
        </td>
        
       <td> 
         <%= link_to edit_car_path(car) do %>
              <span class="pull-left"><i class="far fa-lg  fa-edit" title="<%= t('buttons.edit')%>"></i> </span>
        <% end %>
        </td>
        
       <td> 
         <%= link_to car, method: :delete, data: { confirm: 'VocÃª tem certeza?' } do %>
              <span class="pull-left"><i class="far fa-lg  fa-trash-alt" title="<%= t('buttons.delete')%>"></i> </span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

