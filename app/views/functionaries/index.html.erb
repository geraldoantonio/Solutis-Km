<h1 ><i class="fas  fa-users"></i> <%= Functionary.model_name.human count: 2 %></h1>

<%= link_to new_functionary_path do %>
      <span class="pull-left"><i class="far fa-lg  fa-plus-square"></i> <%= t('buttons.new') << ' ' << Functionary.model_name.human
 %> </span>
<% end %>


<table class="table table-striped table-sm table-responsive table-hover">
  
  <caption> <%= page_entries_info @functionaries %></caption>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= Functionary.human_attribute_name("matriculation")%></th>
      <th scope="col"><%= Functionary.human_attribute_name("name")%></th>
      <th scope="col"><%= Functionary.human_attribute_name("active")%></th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functionaries.each do |functionary| %>
      <tr  class='clickable-row' data-href='<%=  functionary_path(functionary) %>'>
        <td scope="row"><%= functionary.id %> </td>
        <td><%= functionary.matriculation %></td>
        <td><%= functionary.name %></td>
        <td><%= render inline: functionary.active_icon(functionary.active) %></td>
        
       <td> 
          <%= link_to functionary do %>
            <span class="pull-left"><i class="fas fa-lg  fa-info" title="<%= t('buttons.show')%>"></i> </span>
          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

