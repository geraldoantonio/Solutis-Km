<h1 ><i class="fas fa-users"></i><%= " #{Functionary.model_name.human}: #{@functionary.id} " %></h1>


<p>
  <strong><%= Functionary.human_attribute_name("matriculation") %>: </strong>
  <%= @functionary.matriculation %>
</p>

<p>
  <strong><%= Functionary.human_attribute_name("name") %>: </strong>
  <%= @functionary.name %>
</p>

<p>
  <strong><%= Functionary.human_attribute_name("function") %>: </strong>
  <%= @functionary.function %>
</p>

<p>
  <strong><%= Functionary.human_attribute_name("leader") %>: </strong>
  <%= @functionary.leader_name(@functionary.leader) %>
</p>

<p>
  <strong><%= Functionary.human_attribute_name("active") %>: </strong>
  <%= @functionary.active %>
</p>

<div class="form-group d-print-none ">
  <%= link_to t('buttons.back'), functionaries_path, class:"btn btn-success" %>
  <%= link_to t('buttons.edit'), edit_functionary_path(@functionary), class:"btn btn-primary" %>
</div>
    