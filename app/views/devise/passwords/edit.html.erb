<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {method: :put, :class => "form-signin text-center"})  do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <img class="mb-4" src="https://s3.amazonaws.com/gupy5/production/companies/167/images/logo.jpg" alt="" width="82" height="92">
      <h1 class="h3 mb-3 font-weight-normal">Alterar senha</h1>  


    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", required: "required" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar Senha", required: "required" %>
    </div>

    <div class="form-group">
        <%= submit_tag t('buttons.update'),  class:"btn btn-lg btn-primary btn-block" %>
    </div>

      <p class="form-group text-muted">
        <%= render "devise/shared/links" %>
      </p>

<% end %>

