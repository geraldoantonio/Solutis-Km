
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin text-center"})  do |f| %>
  <%#= devise_error_messages! %>
  <img class="mb-4" src="https://s3.amazonaws.com/gupy5/production/companies/167/images/logo.jpg" alt="" width="82" height="92">
      <h1 class="h3 mb-3 font-weight-normal">Cadastrar usuário!</h1>  

  <%= f.fields_for :functionary do |a| %>

    <div class="form-group">
      <%= a.label :name, class: 'sr-only' %>
      <%= a.text_field :name, :class => "form-control", placeholder: "Nome Completo", required: "required", autofocus: true %>
    </div>
      
    <div class="form-group">
      <%= a.label :matriculation, class: 'sr-only' %>
      <%= a.text_field :matriculation, :class => "form-control", placeholder: "Matrícula", required: "required"  %>
    </div>

    <div class="form-group">
      <%= a.label :function, class: 'sr-only' %>
      <%= a.select :function, Functionary::functions.collect { |key| [Functionary.human_attribute_name(key[0]), key[0]] }, {:prompt => "Seu Cargo..."}, {:class => "form-control", required: "required"}  %>
    </div>

    <div class="form-group">
      <%= a.label :leader, class: 'sr-only' %>
      <% options = options_from_collection_for_select(@list_leaders, 'id', 'name' ) %>
      <%= a.select :leader,   options, {:prompt=>"Seu Líder..."}, {:class => "form-control", required: "required" }  %>
    </div>

    <div class="form-group">
      <%= a.label :active, class: 'sr-only' %>
      <%= a.hidden_field :active, :value => false %>
    </div>

  <% end %>

  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", required: "required" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar Senha", required: "required" %>
  </div>

  <%= submit_tag t('buttons.save'),  class:"btn btn-lg btn-primary btn-block" %>

  <p class="mt-5 mb-3 text-muted">
    <%= render "devise/shared/links" %>
  </p>
<% end %>

