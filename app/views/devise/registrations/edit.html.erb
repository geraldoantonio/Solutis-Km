<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-signin text-center" }) do |f| %>

  <%= image_tag("logo.jpg", class: 'mb-4', width:'82', height: '92' )%>  
  <h1 class="h3 mb-3 font-weight-normal">Editar usuário!</h1>  

  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control", placeholder: "Endereço de Email", required: "required", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", required: "required" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar Senha", required: "required" %>
  </div>

  <div class="form-group">
    <%= submit_tag t("buttons.update"),  class:"btn btn-lg btn-primary btn-block" %>
  </div>
  <div class="form-group border border-danger rounded p-2">
    <h5>Cancelar minha conta</h5>
    <%= link_to t('buttons.back'), :back, class:"btn btn-sm btn-success" %>
    <%= link_to t('buttons.delete'), registration_path(resource_name), data: { confirm: "Têm certeza?" }, method: :delete, class:"btn btn-sm btn-danger" %>
  </div>



<% end %>
