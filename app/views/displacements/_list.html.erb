<div id="filterrific_results">

  <div class="well well-sm">
    <div class="row">
        <div class="text-center"><br>
          <%=  page_entries_info displacements %>
        </div>
    </div>
  </div>

  <table class="table table-striped  table-responsive-sm ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th sope="col"><%= filterrific_sorting_link(@filterrific, :dateDay) %></th>        
        <th scope="col"><%= Displacement.human_attribute_name("osNumber") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("osProject" )%></th>
        <th scope="col"><%= Displacement.human_attribute_name("startHour") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("addressSrc") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("kmStart") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("addressDst") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("kmEnd") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("endHour") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("kmCount") %></th>
        <th scope="col"><%= Displacement.human_attribute_name("annotation") %></th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% displacements.each do |displacement| %>
        <tr>
          <td scope="row"><%= displacement.id %> </td>
          <td><%= l displacement.dateDay %></td>
          <td><%= displacement.osNumber %></td>
          <td><%= displacement.osProject %></td>
          <td><%= displacement.startHour.strftime("%H:%M") unless displacement.startHour.nil?  %></td>
          <td><%= displacement.full_address_src %></td>
          <td><%= displacement.kmStart %></td>
          <td><%= displacement.full_address_dst %></td>
          <td><%= displacement.kmEnd %></td>
          <td><%= displacement.endHour.strftime("%H:%M")  unless displacement.endHour.nil? %></td>
          <td><%= displacement.kmCount %></td>
          <td><%= displacement.annotation %></td>


         <td> 
           <%= link_to displacement do %>
                <span class="pull-left"><i class="fas fa-lg fa-info" title="<%= t('buttons.show')%>"></i> </span>
          <% end %>
          </td>

         <td> 
           <%= link_to edit_displacement_path(displacement) do %>
                <span class="pull-left"><i class="far fa-lg fa-edit" title="<%= t('buttons.edit')%>"></i> </span>
          <% end %>
          </td>

         <td> 
           <%= link_to displacement, method: :delete, data: { confirm: 'VocÃª tem certeza?' } do %>
                <span class="pull-left"><i class="far fa-lg fa-minus-square" title="<%= t('buttons.delete')%>"></i> </span>
          <% end %>
          </td>


        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="row">
      <div class="text-center">
        <%= paginate displacements %>
      </div>
  </div>

</div>